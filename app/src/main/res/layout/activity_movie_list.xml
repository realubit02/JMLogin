<?xml version="1.0" encoding="utf-8"?>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fitsSystemWindows="true"
      tools:context=".MovieList"
    android:id="@+id/mainconstraint"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/black"
    android:id="@+id/titlebar"
    app:layout_constraintTop_toTopOf="@id/mainconstraint"
    app:layout_constraintRight_toRightOf="@id/mainconstraint"
    app:layout_constraintLeft_toLeftOf="@id/mainconstraint">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:text="Movies"
      android:textSize="20dp"
      android:id="@+id/movietitle"
      android:layout_marginStart="160dp"
      android:layout_marginTop="10dp"
      ></TextView>
  <TextView

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/red"
      android:text="Logout"
      android:textSize="15dp"
      android:layout_marginStart="80dp"
      android:id="@+id/logoutid"
      ></TextView>
</LinearLayout>

  <ScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/titlebar"
      tools:ignore="MissingConstraints">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <VideoView
            android:layout_width="200dp"
            android:layout_height="200dp"></VideoView>

    </GridLayout>
  </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>